{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hsrpc",
  "version": "2.0.0",
  "identifier": "com.hsrpc.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "hsrpc",
        "width": 1280,
        "height": 720,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "game-data/*",
      "binaries/tesseract/*",
      "binaries/tesseract/tessdata/*"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDg5RjBFMjhEOTFDNjE0RjQKUldUMEZNYVJqZUx3aWFmK3o1VlMxZWFDZjl3UnVuNk5hMTBQQjZMQW9nWkRERzdyaUlFQU1JNFIK",
      "endpoints": [
        "https://github.com/X3ne/hsrpc/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}

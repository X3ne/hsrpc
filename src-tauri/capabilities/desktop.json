{
  "identifier": "desktop-capability",
  "platforms": [
    "macOS",
    "windows",
    "linux"
  ],
  "windows": [
    "main"
  ],
  "permissions": [
    "updater:default",
    "autostart:default",
    "opener:allow-open-url",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$APPCONFIG/**/*"
        }
      ]
    },
    {
      "identifier": "opener:allow-reveal-item-in-dir",
      "allow": [
        {
          "path": "$APPCONFIG/**/*"
        }
      ]
    }
  ]
}
